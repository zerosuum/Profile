<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/surfaceCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="28dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="6dp"
        app:strokeColor="#E9E9E9"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <!-- Avatar -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileImage"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/profile_photo"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/student_name"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    app:strokeColor="@color/purple"
                    app:strokeWidth="3dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Nama & email -->
                <TextView
                    android:id="@+id/studentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/student_name"
                    android:textColor="@color/text_primary"
                    style="@style/TextAppearance.Material3.TitleLarge"
                    app:layout_constraintTop_toBottomOf="@id/profileImage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/studentEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/student_email"
                    android:textColor="@color/text_secondary"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    app:layout_constraintTop_toBottomOf="@id/studentName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Ringkasan Aakademik -->
                <TextView
                    android:id="@+id/sectionAcademic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Ringkasan Akademik"
                    android:textStyle="bold"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    app:layout_constraintTop_toBottomOf="@id/studentEmail"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Row ringkasan: pakai ConstraintLayout + horizontal chain -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/academicRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/sectionAcademic"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Card 1: Semester -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSemester"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="96dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/chip"
                        app:strokeColor="#E8DFF6"
                        app:strokeWidth="1dp"
                        app:layout_constraintWidth_default="spread"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/cardSks"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="14dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Semester"
                                style="@style/TextAppearance.Material3.LabelMedium"
                                android:textColor="@color/text_secondary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textStyle="bold"
                                style="@style/TextAppearance.Material3.TitleMedium"
                                android:textColor="@color/text_primary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(Ganjil 24/25)"
                                style="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="@color/text_secondary"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Card 2: SKS -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSks"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="96dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/chip"
                        app:strokeColor="#E8DFF6"
                        app:strokeWidth="1dp"
                        app:layout_constraintWidth_default="spread"
                        app:layout_constraintStart_toEndOf="@id/cardSemester"
                        app:layout_constraintEnd_toStartOf="@id/cardIpk"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="14dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SKS"
                                style="@style/TextAppearance.Material3.LabelMedium"
                                android:textColor="@color/text_secondary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="72 / 144"
                                android:textStyle="bold"
                                style="@style/TextAppearance.Material3.TitleMedium"
                                android:textColor="@color/text_primary"/>

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/sksProgress"
                                android:layout_width="56dp"
                                android:layout_height="6dp"
                                android:layout_marginTop="8dp"
                                android:indeterminate="false"
                                android:progress="50"
                                app:indicatorColor="@color/purple"
                                app:trackColor="#EEE6F7"
                                app:trackThickness="6dp"/>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Card 3: IPK -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardIpk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="96dp"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/chip"
                        app:strokeColor="#E8DFF6"
                        app:strokeWidth="1dp"
                        app:layout_constraintWidth_default="spread"
                        app:layout_constraintStart_toEndOf="@id/cardSks"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="14dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IPK"
                                style="@style/TextAppearance.Material3.LabelMedium"
                                android:textColor="@color/text_secondary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3.75"
                                android:textStyle="bold"
                                style="@style/TextAppearance.Material3.TitleMedium"
                                android:textColor="@color/text_primary"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <!-- Biodata -->
                <TextView
                    android:id="@+id/labelNIM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/label_nim"
                    android:textStyle="bold"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    app:layout_constraintTop_toBottomOf="@id/academicRow"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/valueNIM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/value_nim"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    app:layout_constraintTop_toBottomOf="@id/labelNIM"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/labelOrigin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/label_origin"
                    android:textStyle="bold"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    app:layout_constraintTop_toBottomOf="@id/valueNIM"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/valueOrigin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/value_origin"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    app:layout_constraintTop_toBottomOf="@id/labelOrigin"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/labelStudy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/label_study"
                    android:textStyle="bold"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    app:layout_constraintTop_toBottomOf="@id/valueOrigin"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/valueStudy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/value_study"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    app:layout_constraintTop_toBottomOf="@id/labelStudy"
                    app:layout_constraintStart_toStartOf="parent"/>

                <!-- Link dan Kontak -->
                <TextView
                    android:id="@+id/labelLinks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/label_links"
                    android:textStyle="bold"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    app:layout_constraintTop_toBottomOf="@id/valueStudy"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/valueLinks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:text="@string/value_links"
                    android:textColor="@color/purple"
                    android:lineSpacingExtra="2dp"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelLinks"/>

                <LinearLayout
                    android:id="@+id/contactRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/valueLinks"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content" style="@style/ActionPill" android:text="📧 Email"/>
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content" style="@style/ActionPill" android:text="🔗 LinkedIn" android:layout_marginStart="8dp"/>
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content" style="@style/ActionPill" android:text="🌐 Blog" android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Badge -->
                <TextView
                    android:id="@+id/labelBadges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Pencapaian"
                    android:textStyle="bold"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    app:layout_constraintTop_toBottomOf="@id/contactRow"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/badge_deans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BadgeTag"
                    android:text="🏆 SIC 7 Finalist"
                    app:layout_constraintTop_toBottomOf="@id/labelBadges"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/badge_ux"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BadgeTag"
                    android:text="💡 Data Club"/>

                <androidx.constraintlayout.helper.widget.Flow
                    android:id="@+id/badgesFlow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="badge_deans,badge_ux"
                    app:flow_wrapMode="chain"
                    app:flow_horizontalGap="8dp"
                    app:flow_verticalGap="8dp"
                    app:flow_horizontalStyle="packed"
                    app:layout_constraintTop_toBottomOf="@id/labelBadges"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <!-- Hobi -->
                <TextView
                    android:id="@+id/labelHobby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/label_hobby"
                    android:textStyle="bold"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    app:layout_constraintTop_toBottomOf="@id/badgesFlow"
                    app:layout_constraintStart_toStartOf="parent"/>


                <TextView
                    android:id="@+id/valueHobby"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/value_hobby"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    app:layout_constraintTop_toBottomOf="@id/labelHobby"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/labelQuote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/label_quote"
                    android:textStyle="bold"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    app:layout_constraintTop_toBottomOf="@id/valueHobby"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/valueQuote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/value_quote"
                    android:lineSpacingExtra="2dp"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    app:layout_constraintTop_toBottomOf="@id/labelQuote"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="8dp"/>

                <!-- CTA -->
                <TextView
                    android:id="@+id/btnShareProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Bagikan Profil"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/pill_metric"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/valueQuote"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="8dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>