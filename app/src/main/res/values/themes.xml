<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema utama aplikasi -->
    <style name="Theme.StudentProfile" parent="Theme.Material3.Light.NoActionBar">
        <!-- Warna dasar (boleh sesuaikan) -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- System bars supaya terang -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

</resources>
